{
  "name": "discord-bot",
  "version": "1.0.0",
  "description": "Discord bot with PM2 and GitHub Actions",
  "main": "bot.js",
  "type": "commonjs",
  "scripts": {
    "start": "pm2 start bot.js --name discord-bot --attach --deep-monitoring",
    "stop": "pm2 stop discord-bot",
    "restart": "pm2 restart discord-bot"
  },
  "dependencies": {
    "discord.js": "^14.16.0",
    "dotenv": "^16.0.3",
    "pm2": "latest",
    "axios": "latest",
    "fs-extra": "latest"
  }
}
